{
    "compileOnSave": false,
    "filesGlob": [
        "**/*.{ts,tsx}",
        "../typings/**/*.*.ts"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "files": [
        "./Util.ts",
        "./link_component.ts",
        "./link_generator.ts",
        "./neighbour_record.ts",
        "./neighbour_store.ts",
        "./peer.io.ts",
        "../typings/eventemitter2/eventemitter2.d.ts",
        "../typings/tsd.d.ts"
    ],
    "exclude": [
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
