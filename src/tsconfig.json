{
    "compileOnSave": false,
    "filesGlob": [
        "**/*.{ts,tsx}",
        "../typings/main/**/*.*.ts"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "files": [
        "../typings/main/ambient/eventemitter2/index.d.ts",
        "../typings/main.d.ts",
        "./Util.ts",
        "./link_component.ts",
        "./link_generator.ts",
        "./neighbour_record.ts",
        "./neighbour_store.ts",
        "./peer.io.ts"
    ],
    "exclude": [
        "typings/browser.d.ts",
        "typings/browser"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
